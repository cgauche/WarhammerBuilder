<tr>
        <th>Nom</th>
        <th>Type</th>
        <th>Niveau d'incantation</th>
        <th>Portée</th>
        <th>Cible</th>
        <th>Dégat</th>
        <th>Taille</th>
        <th>Source</th>
        <th style="text-align:right">
                <a class="waves-effect waves-light btn" onclick="openForm()"><i
                        class="material-icons">add_circle_outline</i></a>
        </th>
</tr>
{% for spell in Spells %}
        <tr>
                <td>{{spell['name']}}</td>
                <td>{{spell['type']}}</td>
                <td>{{spell['ni']}}</td>
                <td>{{spell['range']}}</td>
                <td>{{spell['target']}}</td>
                <td>{{spell['damage']}}</td>
                <td>{{spell['length']}}</td>
                <td>{{spell['source']}}</td>
                <td style="text-align:right; width: 125px;">
                <a class="waves-effect waves-light btn" onclick="openForm(this.id)" id="{{spell['id']}}"><i
                        class="material-icons">border_color</i></a>
                <a class="waves-effect waves-light btn modal-trigger" onclick="delMsg(this.id)" id="{{spell['id']}}"><i
                        class="material-icons">delete</i></a>
                </td>
        </tr>
{% endfor %}